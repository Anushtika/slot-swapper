version: "3.9"

services:
  db:
    image: postgres:16-alpine
    environment:
      POSTGRES_USER: "${POSTGRES_USER:-slotswapper_user}"
      POSTGRES_PASSWORD: "${POSTGRES_PASSWORD:-change_me}"
      POSTGRES_DB: "${POSTGRES_DB:-slotswapper}"
    volumes:
      - pgdata:/var/lib/postgresql/data
    ports:
      - "127.0.0.1:5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-slotswapper_user} -d ${POSTGRES_DB:-slotswapper}"]
      interval: 5s
      timeout: 5s
      retries: 5

  db-migrate:
    build:
      context: ./backend
      dockerfile: Dockerfile
    # This service runs the migrations and exits.
    entrypoint: ["npx", "prisma", "migrate", "deploy"]
    env_file:
      - ./backend/.env
    depends_on:
      - db
    restart: "no"

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    env_file:
      - ./backend/.env
    ports:
      - "3000:3000"
    depends_on:
      - db-migrate
    # keep logs visible
    stdin_open: true
    tty: true

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
      args:
        VITE_API_BASE_URL: "${VITE_API_BASE_URL:-http://localhost:3000/api}"
        VITE_WS_BASE_URL: "${VITE_WS_BASE_URL:-ws://localhost:3000/ws}"
    ports:
      - "80:80"
    depends_on:
      - backend

volumes:
  pgdata: